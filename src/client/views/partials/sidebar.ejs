<div class="sidenav">
    <ul>
        <% const dashboardRoute = `/users/dashboard/${userInfo.username}` %>
        <li>
            <a href="<%= dashboardRoute %>">
                <span class="icon"><i class="fa fa-home" aria-hidden="true"></i></span>
                <span class="title">Home</span>
            </a>
        </li>
        <% const scheduleRoute = `/schedule/${userInfo.username}` %>
        <li>
            <a href="<%= scheduleRoute %>">
                <span class="icon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
                <span class="title">Schedule</span>
            </a>
        </li>
        
        <li>
        <% const profileRoute = `/users/profile/${userInfo.username}` %>
            <a href="<%= profileRoute %>" >
                <span class="icon"><i class="fa fa-id-card-o" aria-hidden="true"></i></span>
                <span class="title">Profile</span>
            </a>
        </li>
        <% const requestRoute = `/request/${userInfo.username}` %>
        <li>
            <a href="<%= requestRoute %>">
                <span class="icon"><i class="fa fa-question" aria-hidden="true"></i></span>
                <span class="title">Requests</span>
            </a>
        </li>

        <li>
            <a href="#">
                <span class="icon"><i class="fa fa-google-wallet" aria-hidden="true"></i></span>
                <span class="title">Payroll</span>
            </a>
        </li>

        <li>
            <a href="/users/logout">
                <span class="icon"><i class="fa fa-sign-out" aria-hidden="true"></i></span>
                <span class="title">Sign Out</span>
            </a>
        </li>
    </ul>
</div>

<div class="toggle" onclick="toggleMenu()"></div>

<script type="text/javascript">
    function toggleMenu(){
        let navi = document.querySelector('.sidenav');
        let toggle = document.querySelector('.toggle')
        navi.classList.toggle('active');
        toggle.classList.toggle('active')
    }
</script>